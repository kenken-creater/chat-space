.main-chat__messages__message{data: {message: {id: message.id}}}
  .main-chat__messages__message__about
    .main-chat__messages__message__about__user-name
      = message.user.name
    .main-chat__messages__message__about__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__messages__message__content
    - if message.content.present?
      %p= message.content
  = image_tag message.image.url, class: 'main-chat__messages__message__image' if message.image.present?
         
    
