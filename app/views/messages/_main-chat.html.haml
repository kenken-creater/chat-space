.main-chat
  .main-chat__header
    .main-chat__header__left-box
      .main-chat__header__left-box__group-name
        = @group.name
      %ul.main-chat__header__left-box__member-name
        Member :
        - @group.users.each do |user|
          %li= user.name
        
    .main-chat__header__right-box
      = link_to "Edit", edit_group_path(@group.id)

  .main-chat__messages
    = render @messages

  .main-chat__footer
    = form_for [@group, @message], html: { class: "main-chat__footer__new-message" } do |f|
      .main-chat__footer__new-message__input-box      
        = f.text_field :content,  class: "main-chat__footer__new-message__input-box__text", placeholder: "type a message"          
        = f.label :image, class: "main-chat__footer__new-message__input-box__image" do
          %i.fa.fa-image
          = f.file_field :image
      = f.submit "Send", class: "main-chat__footer__new-message__submit-btn"